<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/mvc
		http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">

    <bean class="com.controller.UserController" p:userService-ref="userService" p:adminService-ref="adminService"></bean>
    <bean class="com.controller.AdminController" p:adminService-ref="adminService"/>
    <bean class="com.controller.QuestionController" p:questionService-ref="questionService" p:surveyService-ref="surveyService"></bean>
    <bean class="com.controller.SurveyController" p:resultService-ref="resultService" p:surveyService-ref="surveyService" p:questionService-ref="questionService"></bean>
    <bean class="com.controller.ResultController" p:surveyService-ref="surveyService" p:resultService-ref="resultService" p:userService-ref="userService"></bean>
    <mvc:annotation-driven></mvc:annotation-driven>
    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/*.action" />
            <mvc:mapping path="/*/*.action" />
            <mvc:exclude-mapping path="/loginCheck.action"/>
            <bean class="com.handler.BaseHandler" />
        </mvc:interceptor>
    </mvc:interceptors>

    <!--配置视图解析器-->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver"/>

</beans>